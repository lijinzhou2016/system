<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_questionbank"
    tools:context="xzit.zyy.system.MyAccount">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_red">
        <ImageView
            android:id="@+id/my_account_back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_icon"/>
        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:text="账号信息"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_activity_my_account_photo"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_white">
                <ImageView
                    android:id="@+id/activity_txt_my_account_photo_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@mipmap/activity_txt_my_account_photo_img"/>
                <TextView
                    android:id="@+id/activity_txt_my_account_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:layout_toRightOf="@+id/activity_txt_my_account_photo_img"
                    android:textColor="#000"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/activity_account_img_one"
                    android:layout_width="25dp"
                    android:layout_height="45dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jump_icon"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_activity_my_account_useraccount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_white">
                <ImageView
                    android:id="@+id/activity_my_account_useraccount_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@mipmap/activity_my_account_useraccount_img"/>
                <TextView
                    android:id="@+id/activity_my_account_useraccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="用户名"
                    android:layout_toRightOf="@+id/activity_my_account_useraccount_img"
                    android:textColor="#000"
                    android:textSize="13sp"/>

            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_activity_my_account_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_white">
                <ImageView
                    android:id="@+id/activity_my_account_username_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@mipmap/activity_my_account_username_img"/>
                <TextView
                    android:id="@+id/activity_my_account_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="用户昵称"
                    android:layout_toRightOf="@+id/activity_my_account_username_img"
                    android:textColor="#000"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/activity_account_img_three"
                    android:layout_width="25dp"
                    android:layout_height="45dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jump_icon"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_activity_my_account_userpwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_white">
                <ImageView
                    android:id="@+id/activity_my_account_userpwd_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@mipmap/activity_my_account_userpwd_img"/>
                <TextView
                    android:id="@+id/activity_my_account_userpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="登录密码"
                    android:layout_toRightOf="@+id/activity_my_account_userpwd_img"
                    android:textColor="#000"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/activity_account_img_four"
                    android:layout_width="25dp"
                    android:layout_height="45dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jump_icon"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
