<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_questionbank"
    tools:context="xzit.zyy.system.MyAlertPwd">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_red">
        <ImageView
            android:id="@+id/my_alertpwd_back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_icon"/>
        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:text="修改密码"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_alertpwd_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_text_color"
            android:layout_centerVertical="true"
            android:text="当前密码："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/my_alertpwd_current_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/my_alertpwd_current"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="#000"
            android:textColorHint="#C8C8C8"
            android:paddingLeft="10dp"
            android:inputType="textPassword"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_alertpwd_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_text_color"
            android:layout_centerVertical="true"
            android:text="新的密码："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/my_alertpwd_new_edit"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textSize="16sp"
            android:hint="输入新密码"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/my_alertpwd_new"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:textColorHint="#C8C8C8"
            android:inputType="textPassword"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_alertpwd_newrepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_text_color"
            android:layout_centerVertical="true"
            android:text="重复密码："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/my_alertpwd_newrepeat_edit"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textSize="16sp"
            android:hint="再次输入新密码"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/my_alertpwd_newrepeat"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:textColorHint="#C8C8C8"
            android:inputType="textPassword"
            />

    </RelativeLayout>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/my_alertpwd_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/text_white"
        android:textSize="20sp"
        android:background="@drawable/login_shape"/>

</LinearLayout>
