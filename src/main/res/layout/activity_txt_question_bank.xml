<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_questionbank">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_red">
        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:text="教师资格"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bg_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/question_bank_practice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_practice"
            android:gravity="center"
            android:padding="5dp"
            android:text="章节练习"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/question_bank_true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_true"
            android:gravity="center"
            android:padding="5dp"
            android:text="历年真题"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/question_bank_simulate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_simulate"
            android:gravity="center"
            android:padding="5dp"
            android:text="模拟试题"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bg_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/question_bank_easy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_easy"
            android:gravity="center"
            android:padding="5dp"
            android:text="易错题"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/question_bank_analyze"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_analyze"
            android:gravity="center"
            android:padding="5dp"
            android:text="评估报告"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/question_bank_offline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_offline"
            android:gravity="center"
            android:padding="5dp"
            android:text="离线题库"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
    </LinearLayout>
    <!--中间模块-->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bg_white"
        android:layout_height="180dp"
        >
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_gray"
            android:layoutDirection="inherit"
            ></View>

        <!--挑战积分模块-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/question_bank_txt_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="挑战赢积分"
                    android:padding="2dp"
                    android:textSize="24dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/question_bank_txt_challenge"
                    android:layout_below="@+id/question_bank_txt_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@drawable/tab_menu_text"
                    android:padding="2dp"
                    android:text="难度升级挑战有惊喜"
                    android:textSize="16dp"/>
                <ImageView
                    android:id="@+id/question_back_txt_earn_one"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/question_back_txt_earn_one"
                    android:layout_marginLeft="60dp"
                    android:layout_below="@+id/question_bank_txt_challenge"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/question_back_txt_earn_two"
                    android:layout_below="@+id/question_bank_txt_challenge"
                    android:layout_toRightOf="@+id/question_back_txt_earn_one"
                    android:layout_marginLeft="4dp"/>

            </RelativeLayout>

        </LinearLayout>
        <!--挑战积分模块end-->
        <!--竖着的分割线-->
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/text_gray"
            ></View>
        <!---->
  <!--VIP题库和血学员专题模块-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp">
                    <TextView
                        android:id="@+id/question_back_txt_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIP题库"
                        android:textColor="@color/text_red"
                        android:textSize="26dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/question_back_txt_vip"
                        android:layout_height="wrap_content"
                        android:text="智能分析必考考点"
                        android:textColor="@drawable/tab_menu_text"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/question_back_txt_vip"/>

                </RelativeLayout>
            </LinearLayout>
            <!--横着的分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_gray"
                ></View>
            <!---->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="15dp">
                    <TextView
                        android:id="@+id/question_back_txt_remember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学员专享"
                        android:textColor="@color/text_purple"
                        android:textSize="26dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/question_back_txt_remember"
                        android:layout_height="wrap_content"
                        android:text="课程配套名师出题"
                        android:textColor="@drawable/tab_menu_text"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/question_back_txt_remember"/>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--中间模块end-->


    <!--第三模块-->

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/question_bank_practiceremeber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_practiceremeber"
            android:gravity="center"
            android:padding="5dp"
            android:text="做题记录"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/question_bank_errortatal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_errortatal"
            android:gravity="center"
            android:padding="5dp"
            android:text="错题集"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/question_bank_restore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_restore"
            android:gravity="center"
            android:padding="5dp"
            android:text="收藏试题"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/question_bank_noteanalyse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/question_bank_noteanalyse"
            android:gravity="center"
            android:padding="5dp"
            android:text="笔记解析"
            android:drawablePadding="3dp"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp"/>
    </LinearLayout>
    <!--第三模块end-->
        </LinearLayout>
    </ScrollView>


    </LinearLayout>